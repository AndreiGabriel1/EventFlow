{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "rootDir": "src",
    "outDir": "dist",

    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src", "types/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "server.js",
    "routes",
    "views"
  ]
}
